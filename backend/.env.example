# ================================================================
# SMS OTP Configuration
# ================================================================

# Development Mode (Recommended for testing)
# Set to "false" to send real SMS messages
DEVELOPMENT_MODE=true

# ================================================================
# Option 1: Twilio SMS (International Coverage)
# ================================================================
# Get these values from your Twilio Console: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# ================================================================
# Option 2: Fast2SMS (India-specific, Affordable)
# ================================================================
# Get API key from: https://www.fast2sms.com/
FAST2SMS_API_KEY=your_fast2sms_api_key_here
FAST2SMS_SENDER_ID=FSTSMS

# ================================================================
# Option 3: Firebase Phone Authentication
# ================================================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_project_id_here

# ================================================================
# Email Configuration (for password reset via email)
# ================================================================
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ================================================================
# Database Configuration
# ================================================================
DATABASE_URL=sqlite:///./test_bouncer.db

# ================================================================
# Application Settings
# ================================================================
# Set to "production" for live deployment
ENVIRONMENT=development

# CORS settings (frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT settings
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3